#!/bin/sh
# postrm script
#
# see: dh_installdeb(1)

set -e
APP_ID="${DPKG_MAINTSCRIPT_PACKAGE:?DPKG_MAINTSCRIPT_PACKAGE is not set as it should be}"
RUN_AS="$APP_ID"

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge)
        echo "${DPKG_MAINTSCRIPT_PACKAGE}: Cleaning '${APP_ID:?INTERNAL ERROR - No APP_ID}' data..." >&2
        [ -d /var/log/"$APP_ID" ] && rm -rf /var/log/"$APP_ID"
        [ -d /var/opt/"$APP_ID" ] && rm -rf /var/opt/"$APP_ID"
        [ -d /run/"$APP_ID" ] && rm -rf /run/"$APP_ID"
        [ -d /etc/"$APP_ID" ] && rm -rf /etc/"$APP_ID"
        [ -f /etc/default/"$APP_ID" ] && rm -f /etc/default/"$APP_ID"
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "${DPKG_MAINTSCRIPT_PACKAGE}: postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
